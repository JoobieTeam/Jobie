@model Joobie.Models.JobModels.Job
@using Joobie.Utility;
@{
    ViewData["Title"] = "Create";
}
<form method="post" asp-action="Create" enctype="multipart/form-data">

    <div class="border backgroundWhite">
        <h2 class="text-info">Dodaj Ofertę</h2>
        <br />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-10">
                <textarea id="editor" asp-for="Description"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Salary" class="control-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="Salary" class="form-control" />
            </div>
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Localization" class="control-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="Localization" class="form-control" />
            </div>
            <span asp-validation-for="Localization" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AddedDate" class="control-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="AddedDate" class="form-control" />
            </div>
            <span asp-validation-for="AddedDate" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ExpirationDate" class="control-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="ExpirationDate" class="form-control" />
            </div>
            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryId" class="control-label"></label>
            </div>
            <div class="col-10">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TypeOfContractId" class="control-label"></label>
            </div>
            <div class="col-10">
                <select asp-for="TypeOfContractId" class="form-control" asp-items="ViewBag.TypesOfContracts"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="WorkingHoursId" class="control-label"></label>
            </div>
            <div class="col-10">
                <select asp-for="WorkingHoursId" class="form-control" asp-items="ViewBag.WorkingHours"></select>
            </div>
        </div>
        @if (!User.IsInRole(Strings.CompanyUser))
        {
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="UserId" class="control-label"></label>
                </div>
                <div class="col-10">
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.Employees"></select>
                </div>
            </div>
        }
        <div class="form-group row">
            <div class="col-10 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section editor_scripts{
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg/trumbowyg.min.js"></script>
    <script>$('#editor').trumbowyg();</script>
}