@model Joobie.Models.JobModels.Job
@using Joobie.Utility

@{
    ViewData["Title"] = "Details";
}
<div class="border backgroundWhite">
    <fieldset disabled>
        <div class="col-7">
            <h2 class="text-info">Szczegóły</h2>
            <br />
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control " />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-5">
                @Html.Raw(Model.Description)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Localization" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Localization" class="form-control " />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AddedDate" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="AddedDate" class="form-control " />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ExpirationDate" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="ExpirationDate" class="form-control " />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Salary" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Salary" class="form-control " />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Category" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Category.Name" class="form-control " />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TypeOfContract" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="TypeOfContract.Name" class="form-control " />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="WorkingHours" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="WorkingHours.Name" class="form-control " />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ApplicationUser" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="ApplicationUser.Name" class="form-control " />
            </div>
        </div> 

    </fieldset>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <div class="row">
                <div class="col-6">
                    @if (User.IsInRole(Strings.AdminUser) || User.IsInRole(Strings.ModeratorUser))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info form-control">Edytuj</a>
                    }
                    else if (User.IsInRole(Strings.CompanyUser))
                    {

                    }
                    else
                    {
                        <a asp-action="Apply" asp-route-id="@Model.Id" class="btn btn-info form-control">Apply</a>
                    }
                </div>
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-success form-control">Wróć do listy</a>
                </div>
            </div>
        </div>
    </div>
</div>