@model Joobie.ViewModels.ListViewModel<Joobie.Models.JobModels.Job>

@{
    ViewData["Title"] = "Index";
}


<partial name="~/Views/Jobs/Search.cshtml" model=@ViewData["searchSettingViewModel"] />


<br />
<div class="backgroundWhite border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Oferty</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Items.Count() > 0)
        {
            <table class="table table-striped border">
                @{var item2 = Model.Items.Last();}
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(model => item2.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item2.Localization)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item2.ExpirationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item2.Category.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item2.TypeOfContract.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item2.WorkingHours.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item2.ApplicationUser.Name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Localization)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExpirationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TypeOfContract.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkingHours.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
                        </td>
                        <td style="width:150px">
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@item.Id">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a class="btn btn-success text-white" asp-action="Details" asp-route-Id="@item.Id">
                                    <i class="fas fa-list-alt"></i>
                                </a>

                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>Brak Kategorii</p>
        }
    </div>
</div>


<div page-model="@Model.PagingInfo" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary"
     class="btn-group pull m-1">
</div>




